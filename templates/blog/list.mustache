{{<layout::layout}}
{{$title}}{{title}}{{/title}}
{{$links}}
    <link href="/css/blog.min.css" media="screen" rel="stylesheet" type="text/css">
    {{#tag}}
    <link href="{{rss}}" rel="alternate" type="application/rss+xml" title="phly, boy, phly RSS Feed for {{tag}}">
    <link href="{{atom}}" rel="alternate" type="application/atom+xml" title="phly, boy, phly Atom Feed for {{tag}}">
    {{/tag}}
{{/links}}
{{$scripts}}
<script language="JavaScript" src="/js/prism.js"></script>
{{/scripts}}
{{$footer}}{{>tag-cloud}}{{/footer}}
{{$content}}
<section class="blog center-block">
  <div class="container-fluid"><div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1>{{title}}</h1>
    </div>
  </div></div>

  {{^posts}}
  <p>No posts found.</p>
  {{/posts}}

  {{#posts}}
  <div class="container-fluid h-entry">
    <aside class="col-md-2 col-md-offset-2 hidden-xs alpha sidebar blog">
      <p>
          Written on <time class="dt-published" datetime="{{created_rfc}}">{{created}}</time>.
          {{#updated}}
          <br />Last updated on <time class="dt-updated" datetime="{{rfc}}">{{when}}</time>.
          {{/updated}}
      </p>

      <ul class="tags">
      {{#tags}}
        <li><a class="p-category" href="{{link}}">{{tag}}</a>
      {{/tags}}
      </ul>

      <div class="p-author h-card hidden">
        Posted by <a rel="author" class="u-url" href="https://mwop.net/">Matthew Weier O'Phinney</a>,
        <img class="u-photo photo" width="50" src="https://avatars0.githubusercontent.com/u/25943?v=3&u=79dd2ea1d4d8855944715d09ee4c86215027fa80&s=140" alt="mwop">
      </div>
    </aside>

    <section class="col-md-8 omega post-list">
        <h4 class="entry"><a class="u-url u-uid" href="{{#uri}}{"name": "blog.post", "options": {"id": "{{id}}"}}{{/uri}}">{{title}}</a></h4>

        <div class="entry body p-summary">{{{body}}}</div>

        <p><a href="{{#uri}}{"name": "blog.post", "options": {"id": "{{id}}"}}{{/uri}}">Continue reading...</a></p>
    </section>
  </div>
  {{/posts}}

  {{>pagination}}
</section>
{{/content}}
{{/layout::layout}}
